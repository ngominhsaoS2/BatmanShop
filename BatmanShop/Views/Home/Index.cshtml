@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var productCategory = (List<Model.EntityFramework.ProductCategory>)ViewBag.ProductCategory;
    var topNewProducts = (List<Model.ViewModel.ProductViewModel>)ViewBag.TopNewProducts;
    var topNewContents = (List<Model.EntityFramework.Content>)ViewBag.TopNewContents;
    var topNewSlides = (List<Model.EntityFramework.Slide>)ViewBag.TopNewSlides;
    var newestBanner = (Model.EntityFramework.Banner)ViewBag.NewestBanner;
}


@section banner{
    <div class="banner" style="background: url(@newestBanner.Image) no-repeat center;
                                width: 100%;
	                            min-height: 600px;
	                            display: block;
	                            padding: 12em 0 0;
	                            background-size: cover;">
    <div class="container">
        <div class="banner-matter">
            @Html.Raw(newestBanner.Content)
            <div class="out">
                <a href="/News" class="find">FIND OUT MORE </a>
                <a href="/News" class="shop">START</a>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
</div>    
}

<div class="content">
    <div class="sport-your">
        <!-- requried-jsfiles-for owl -->
        <link href="/Assets/Client/css/owl.carousel.css" rel="stylesheet">
        <script src="/Assets/Client/js/owl.carousel.js"></script>
        <script>
									    $(document).ready(function() {
									      $("#owl-demo").owlCarousel({
									        items : 5,
									        lazyLoad : true,
									        autoPlay : true,
									        navigation : true,
									        navigationText :  true,
									        pagination : false,
									      });
